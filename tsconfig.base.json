{
	"compilerOptions": {
		"lib": ["esnext", "dom"],
		"jsx": "react-jsx",
		"declaration": true,
		"declarationDir": "./dist/types",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"rootDir": "./src"
	},
	"include": ["src", "src/dev", "src/types"],
	"exclude": ["dist", "node_modules", "src/dev"]
}
