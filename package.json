{
	"name": "react-typescript-scrollbar",
	"version": "1.4.1",
	"description": "A customizable scrollbar component for React applications",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.mjs",
	"types": "./dist/types/index.d.ts",
	"sideEffects": false,
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"require": "./dist/cjs/index.js",
			"import": "./dist/esm/index.mjs"
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build:cjs": "tsc -p tsconfig.cjs.json && terser ./dist/cjs/index.js -o ./dist/cjs/index.js --compress --mangle",
		"build:esm": "tsc -p tsconfig.esm.json && npm run rename:esm && terser ./dist/esm/index.mjs -o ./dist/esm/index.mjs --compress --mangle",
		"build:types": "tsc -p tsconfig.types.json",
		"build": "npm run build:cjs && npm run build:esm && npm run build:types",
		"clean": "rimraf dist",
		"rename:esm": "/bin/zsh ./scripts/fix-mjs.sh",
		"prepack": "npm run clean && npm run build",
		"dev": "tsc -p tsconfig.dev.json && vite",
		"build:dev": "NODE_ENV=development tsc -p tsconfig.dev.json && vite build --mode development",
		"preview": "vite preview",
		"deploy": "npm run build:dev && gh-pages -d dist-demo"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Mastero4ek/react-ts-scrollbar.git"
	},
	"keywords": [
		"react",
		"scrollbar",
		"custom-scrollbar",
		"typescript",
		"react-component",
		"scroll",
		"ui"
	],
	"author": "mastero4ek",
	"license": "MIT",
	"peerDependencies": {
		"@types/react": ">=18.2.0",
		"@types/react-dom": ">=18.2.0",
		"react": ">=16.8.0",
		"react-dom": ">=16.8.0"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"@vitejs/plugin-react": "^4.2.0",
		"framer-motion": "^12.23.12",
		"gh-pages": "^6.1.1",
		"path": "^0.12.7",
		"react": "^18.2.0",
		"react-colorful": "^5.6.1",
		"react-dom": "^18.2.0",
		"react-syntax-highlighter": "^15.6.6",
		"rimraf": "^6.0.1",
		"terser": "^5.29.2",
		"typescript": "^5.8.3",
		"vite": "^5.0.0"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
